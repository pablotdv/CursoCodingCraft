@section Scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="row">
    <div class="col-sm-4">
        <form data-bind="submit: callApi">
            <h3>Invoke API</h3>
            <div class="form-group">
                <label>User</label>
                <input class="form-control" type="text" readonly data-bind="value: user" />
            </div>
            <div class="form-group">
                <label>Result</label>
                <input class="form-control" type="text" readonly data-bind="value: result" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Call API</button>
            </div>
        </form>
    </div>

    <div class="col-sm-4">
        <form data-bind="submit: register">
            <h3>Register</h3>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: registerEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword2" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>

    <div class="col-sm-4">
        <h3>Log In</h3>
        <form data-bind="submit: login">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: loginEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: loginPassword" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log In</button>
                <button data-bind="click: logout" class="btn btn-default">Log Out</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <form data-bind="submit: postDiretorio">
            <h3>Diretórios</h3>
            <div class="form-group">
                <label>Nome</label>
                <input class="form-control" type="text" data-bind="value: diretorioNome" />
            </div>
            <div class="form-group">
                <label>Diretório Pai</label>
                <input class="form-control" type="text" data-bind="value: diretoriPai" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Diretórios</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: diretorios">
                    <li>
                        <span data-bind="text: DiretorioId"></span> - <strong><span data-bind="text: Nome"></span></strong>                        
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
</div>

<div class="row">
    <div class="col-sm-4">
        <form data-bind="submit: postArquivo">
            <h3>Arquivos</h3>
            <div class="form-group">
                <label>Nome</label>
                <input class="form-control" type="text" data-bind="value: arquivoNome" />
            </div>
            <div class="form-group">
                <label>Diretório</label>
                <input class="form-control" type="text" data-bind="value: arquivoDiretorioId" />
            </div>
            <div class="form-group">
                <label>Arquivo</label>
                <input class="form-control" type="file" data-bind="file: {data: arquivo}" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Arquivos</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: arquivos">
                    <li>
                        <strong><span data-bind="text: Nome"></span></strong>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
</div>
