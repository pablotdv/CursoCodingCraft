@model CodingCraft.Common.ViewModels.Fornecedor.FornecedorViewModel

@{
    ViewBag.Title = "Detalhes da fornecedor";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>Detalhes do fornecedor - @Model.Nome</label>
            </div>
            <div class="panel-body">
                @Html.Partial("_Fornecedor")
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <a href="@Url.Action("Edit", new { id = Model.FornecedorId})" class="btn btn-default"><i class="fa fa-edit fa-fw"></i> Editar</a>
        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left fa-fw"></i> Voltar</a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input').attr('readonly', 'readonly');
        });
    </script>
}