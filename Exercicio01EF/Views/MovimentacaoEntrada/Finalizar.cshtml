@model CodingCraft.Common.ViewModels.MovimentacaoEntrada.MovimentacaoEntradaViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>Finalizar a entrada - #@Model.MovimentacaoId?</label>
            </div>
            <div class="panel-body">
                @Html.Partial("_MovimentacaoEntrada")
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left fa-fw"></i> Voltar</a>
        <button type="submit" class="btn btn-default"><i class="fa fa-trash-o fa-fw"></i> Finalizar</button>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input').attr('readonly', 'readonly');
        });
    </script>
}